{
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "extends": [
        "tslint-config-prettier"
    ],
    "rules": {
        "no-any": true,
        "component-class-suffix": true,
        "component-selector": [
            true,
            "element",
            "gettext",
            "kebab-case"
        ],
        "directive-class-suffix": true,
        "directive-selector": [
            true,
            "attribute",
            "gettext",
            "camelCase"
        ]
    }
}
